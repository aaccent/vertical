doctype html
html(lang='ru')
    head
        block head
            title #{title}
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            meta(charset="UTF-8")
            link(href=require('styles/styles.scss') rel="stylesheet")
    body
        .page-loader: img(src=require('media/static/loader-once.gif'))
        include global/components/pageBlocks/seoPopup/template
        include global/components/pageBlocks/succesPopup/template
        div(data-scroll-container)
            include global/components/pageBlocks/map/popup/mapPopup
            include global/components/pageBlocks/map/popup/projectPopup

            include global/layout/general/header/template
            block main
            include general/footer/template
        block scripts
            script(src=require('scripts/main.ts') type="module")
